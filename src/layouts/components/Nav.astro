---
// import config from '@/config/config.json';
import menu from '@/config/menu.json';

const mainNav = menu.main;
const { pathname } = Astro.url;
const className = Astro.props.class;

const { style } = Astro.props;
// console.log(Astro.props);
---

<div class:list={['nav', className]}>
	<button class="nav__open" title="Открыть меню"> Меню</button>
	<nav class="nav__container">
		<button class="nav__close" title="Закрыть меню"> Закрыть</button>

		<ul class="nav__list">
			{
				mainNav.map((item) => (
					<li class="nav__item">
						<a
							href={item.url}
							class:list={['nav__link', pathname.includes(item.url) ? 'nav__link--active' : '']}
						>
							{item.name}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
</div>

<style>
	.nav {
		@apply ml-auto lg:ml-0;
		&__open {
			@apply ml-auto flex flex-col justify-between tracking-wide text-blue fluid:text-3xl lg:hidden;
		}

		&__close {
			@apply ml-auto flex flex-col items-center justify-center rounded-lg border border-gray p-3 text-blue transition-colors fluid:text-3xl lg:hidden;
			&:hover {
				@apply border-white transition-colors;
			}
		}

		&__container {
			@apply absolute left-0 top-0 -translate-y-[200%] lg:static lg:flex lg:translate-y-[0%];
		}
		&__container--open {
			@apply absolute z-10 h-screen w-full translate-x-[0%] translate-y-[0%] p-4;
			.nav__list {
				@apply flex flex-col gap-6;
			}
			.nav__link {
				@apply px-0 hover:text-gray-dark fluid:text-[150px] dark:hover:text-white;
			}
			.nav__link--active {
				@apply text-dark hover:text-gray-dark dark:text-white;
			}
		}

		&__list {
			@apply hidden w-full lg:flex;
		}

		&__item {
		}

		&__link {
			@apply px-6 font-normal capitalize text-blue transition-colors text-3xl hover:text-blue dark:text-gray lg:dark:hover:text-gray-light;
		}

		&__link--active {
			@apply text-dark dark:text-dark;
		}
	}
</style>

<script>
	document.addEventListener('astro:page-load', () => {
		const openButton = document.querySelector('.nav__open');
		const closeButton = document.querySelector('.nav__close');
		const navContainer = document.querySelector('.nav__container');
		const navItem = document.querySelectorAll('.nav__item');

		openButton?.addEventListener('click', () => {
			navContainer?.classList.toggle('nav__container--open');
			navContainer?.classList.toggle('fade-in-bottom');
		});
		closeButton?.addEventListener('click', () => {
			navContainer?.classList.toggle('nav__container--open');
			navContainer?.classList.toggle('fade-in-bottom');
		});

		navItem.forEach((item) => {
			if (window.matchMedia('( max-width: 1024px)').matches) {
				item.addEventListener('click', () => {
					navContainer?.classList.toggle('nav__container--open');
					navContainer?.classList.toggle('fade-in-bottom');
				});
			}
		});
	});
</script>
